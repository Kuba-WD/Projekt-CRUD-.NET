@page
@model PROJEKT.Pages.Login.UserLoginModel
@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
}

<div>
    @Model.Message
</div>
@if(!string.IsNullOrEmpty(error))
            {
                <h2 class="alert-danger" style="padding:20px">@error</h2>
            }
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="user.Username" class="control-label"></label>
            <div class="col-sm-6">
                <input asp-for="user.Username" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="user.Password" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="user.Password" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Confirm</button>
            </div>
        </div>
    </form>
</div>