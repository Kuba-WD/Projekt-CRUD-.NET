@page
@model PROJEKT.Pages.SiteUsers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SiteUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SiteUser.Username" class="control-label"></label>
                <input asp-for="SiteUser.Username" class="form-control" />
                <span asp-validation-for="SiteUser.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteUser.Password" class="control-label"></label>
                <input asp-for="SiteUser.Password" class="form-control" />
                <span asp-validation-for="SiteUser.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SiteUser.ConfirmPassword" class="control-label"></label>
                <input asp-for="SiteUser.ConfirmPassword" class="form-control" />
                <span asp-validation-for="SiteUser.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SiteUser.Role" class="control-label"></label>
                <select asp-for="SiteUser.Role">
                    <option value="1">Employee</option>
                    <option value="2">Manager</option>
                    <option value="3">Admin</option>
                </select>
                @*<input asp-for="SiteUser.Role" class="form-control" /> *@
                <span asp-validation-for="SiteUser.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
